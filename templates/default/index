import React, { Component } from 'react';
import {Link, Route} from 'react-router-dom';
import Add from './Add';
import Edit from './Edit';
import Listing from './Listing';

export default class Index extends Component {
    render() {
        return (
            <div>
                    <div>
                        <Link to="/kategori" className="btn btn-primary">Listing</Link> &nbsp;
                        <Link to="/kategori/add" className="btn btn-primary">Add</Link>

                        <Route exact path="/kategori" component={Listing} />
                        <Route exact path="/kategori/add" component={Add} />
                        <Route exact path="/kategori/edit/:id" component={Edit} />
                    </div>
            </div>
        );
    }
}
